<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="#ffffff"
        android:padding="15dp">

        <ImageView
            android:id="@+id/burgerimage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/burger3" />

        <TextView
            android:id="@+id/tvburgername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/burgerimage"
            android:layout_toRightOf="@+id/burgerimage"
            android:text="Burger Name"
            android:textColor="#333"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvburgername"
            android:layout_toEndOf="@+id/burgerimage"
            android:layout_toRightOf="@+id/burgerimage"
            android:text="ID no."
            android:paddingLeft="5dp"
            android:textColor="#333"/>

        <TextView
            android:id="@+id/tvburgerdesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvid"
            android:layout_toEndOf="@+id/burgerimage"
            android:layout_toRightOf="@+id/burgerimage"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:text="200 php"
            android:textColor="#333" />

    </RelativeLayout>
</LinearLayout>
